<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Detail</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
  </head>
  <body style="background-color: #e1e6eb;">
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Home</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse fw-bold"
          id="navbarSupportedContent"
        >
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/blog">My
                Project</a>
            </li>
          </ul>
          <a class="nav-link active" aria-current="page" href="/contactForm">
            <button
              style="background-color: black; color: white"
              class="btn btn-outline-success p-1"
              type="submit"
            >
              Contact me
            </button>
          </a>
        </div>
      </div>
    </nav>
    <!-- BODY -->
    <div
      style="background-color: #e1e6eb;"
      class="d-flex flex-column justify-content-center mt-5 p-5"
    >
      <div class="card d-flex flex-row cardProject rounded shadow">
        <img
          class="card-img-top p-4 w-50"
          src="{{blog.image}}"
          alt="Card image cap"
        />
        <div class="d-flex flex-column">
          <div class="mt-5 d-flex flex-column">
            <div class="card-body d-flex flex-column gap-2">
              <h5 class="card-title">Duration</h5>
              <i class="fa-solid fa-calendar-days"></i>
              <i class="fa-regular fa-clock"></i>
              <p class="card-text"><small
                  class="text-muted"
                >{{blog.duration}}</small></p>
            </div>
            <div class="card-body d-flex flex-column gap-2">
              <h5>Technologies</h5>
              <i class="fa-solid fa-atom"></i>
              <i class="fa-brands fa-js"></i>
              <i class="fa-brands fa-node-js"></i>
              <i class="fa-solid fa-bolt"></i>
            </div>
          </div>
          <div class="mt-5">
            <p class="card-text text-start">Lorem ipsum dolor sit amet,
              consectetur adipisicing elit. Recusandae modi optio natus,
              eveniet, animi mollitia corporis aspernatur similique ratione sunt
              ipsa voluptatibus deleniti quaerat quas ipsum vero ducimus, vitae
              quos?</p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>